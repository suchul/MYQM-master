<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#4A7B9D"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:id="@+id/dialog_default_ll_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_default_tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_default_ll_bottom"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_default_ll_body"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_default_btn_confirm"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/com_po_bt_nor"
                android:text="확인"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/fontwhite"
                android:textSize="16dp" />

            <Button
                android:id="@+id/dialog_default_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/com_po_bt_nor"
                android:text="취소"
                android:textColor="@color/fontwhite"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>