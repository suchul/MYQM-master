<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".activity.main.hotkey.HotKeySettingsActivity">

    <LinearLayout
        android:id="@+id/activity_setting_hotkey_ll_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/com_top_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_setting_hotkey_ll_back"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/bt_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hotkey_title"
            android:textColor="@color/fontwhite"
            android:textSize="20dp" />
    </LinearLayout>

    <!-- A Key -->

    <LinearLayout
        android:id="@+id/activity_setting_hotkey_ll_akey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_setting_hotkey_ll_top"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A Key"
            android:textColor="@color/fontwhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Short -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="7"
                android:background="#999999"
                android:gravity="center"
                android:text="Short"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_akey_short"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="#999999"
                android:hint="Home"
                android:inputType="none"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Double -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="7"
                android:background="#999999"
                android:gravity="center"
                android:text="Double"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_akey_double"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="#999999"
                android:hint="Back"
                android:inputType="none"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Long -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="7"
                android:background="#999999"
                android:gravity="center"
                android:text="Long"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_akey_long"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="#999999"
                android:hint="Take a picture"
                android:inputType="none"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- B Key -->

    <LinearLayout
        android:id="@+id/activity_setting_hotkey_ll_bkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_setting_hotkey_ll_akey"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B Key"
            android:textColor="@color/fontwhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Short -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="7"
                android:background="#999999"
                android:gravity="center"
                android:text="Short"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_bkey_short"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="#999999"
                android:hint="Google Assistant"
                android:inputType="none"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Double -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

              <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="7"
                android:background="#999999"
                android:gravity="center"
                android:text="Double"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_bkey_double"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="#999999"
                android:hint="Screen Capture"
                android:inputType="none"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Long -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

           <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="7"
                android:background="#999999"
                android:gravity="center"
                android:text="Long"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_bkey_long"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="#999999"
                android:hint="Scroll Mode"
                android:inputType="none"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- C Key -->

    <LinearLayout
        android:id="@+id/activity_setting_hotkey_ll_ckey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_setting_hotkey_ll_bkey"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C Key"
            android:textColor="@color/fontwhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Short -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="7"
                android:background="#cccccc"
                android:gravity="center"
                android:text="Short"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_ckey_short"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="#cccccc"
                android:hint="@string/please_set_it"
                android:inputType="none"
                android:gravity="center|left"
                android:singleLine="true"
                android:paddingLeft="8dp"
                android:textColorLink="#0000FF"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Double -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="7"
                android:background="#cccccc"
                android:gravity="center"
                android:text="Double"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_ckey_double"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="#cccccc"
                android:hint="@string/please_set_it"
                android:inputType="none"
                android:gravity="center|left"
                android:singleLine="true"
                android:paddingLeft="8dp"
                android:textColorLink="#0000FF"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Long -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="7"
                android:background="#cccccc"
                android:gravity="center"
                android:text="Long"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_ckey_long"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="#cccccc"
                android:hint="@string/please_set_it"
                android:singleLine="true"
                android:inputType="none"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:textColorLink="#0000FF"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 하단 레이아웃 -->
    <RelativeLayout
        android:id="@+id/activity_setting_patch_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_reset"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:background="@drawable/com_po_bt_nor"
                android:gravity="center"
                android:text="@string/reset"
                android:textColor="@color/fontwhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/activity_setting_hotkey_tv_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:background="@drawable/com_po_bt_nor"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/fontwhite"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>